<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<TextView
    android:id="@+id/textView_item_detail_sourceTitle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:text="漫画源"
    />

    <TextView
        android:id="@+id/textView_item_detail_lastChapterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_item_detail_sourceTitle"
        android:text="最新章节"
        />

    <TextView
        android:id="@+id/textView_item_detail_lastChapterUpdateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="更新时间"
        />


</RelativeLayout>