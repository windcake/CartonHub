<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/imageView_detail"
            android:layout_width="120dp"
            android:layout_height="150dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/textView_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView_detail"
            android:text="漫画名称"
            />

        <TextView
            android:id="@+id/textView_detail_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_detail_title"
            android:layout_toRightOf="@id/imageView_detail"
            android:text="漫画作者"
            />

        <TextView
            android:id="@+id/textView_detail_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_detail_author"
            android:layout_toRightOf="@id/imageView_detail"
            android:text="地区"
            />

        <TextView
            android:id="@+id/textView_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textView_detail_area"
            android:layout_toRightOf="@id/imageView_detail"
            android:text="类型"
            />

        <TextView
            android:id="@+id/textView_detail_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imageView_detail"
            android:layout_below="@id/textView_detail_type"
            android:text="点击收藏"
            android:background="#808"
            android:onClick="onClick"

            />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/textView_detail_scroll_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </ScrollView>

    <ListView
        android:id="@+id/listView_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>